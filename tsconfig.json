{
  "include": ["build.ts", "src"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
  }
}